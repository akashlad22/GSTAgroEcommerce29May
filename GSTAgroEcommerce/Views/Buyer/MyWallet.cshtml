@model AgroEcommerceLibrary.Buyer.Buyer

@{
    ViewBag.Title = "MyWallet";
    Layout = "~/Views/Shared/Buyer_Layout.cshtml";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
