        <div class="form-group" style="margin-left:250px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

@Html.ActionLink("Close", "FetchCoupon")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}