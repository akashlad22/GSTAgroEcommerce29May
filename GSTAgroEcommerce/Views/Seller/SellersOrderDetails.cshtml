@model GSTAgroEcommerce.Models.SellerViewModel

@{
    ViewBag.Title = "SellersOrderDetails";

}

<style>
    dt {
        font-weight: bolder;
        font-size: 20px;
    }

    span {
        font-size: 20px;
    }
</style>
<body>
    <div class="">
        <h1 style="text-align:center;">Order Details</h1>
        <div class="main_container">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <div class="row">
                        <div class="form-group col-sm-5">
                            <dt>
                                @Html.DisplayNameFor(model => model.MainImage)
                            </dt>
                            <dd>
                                <img src="~/Content/Images/Product/@Model.MainImage" width="180" height="200" />
                            </dd>
                        </div>
                        <div class="form-group col-sm-7" style="margin-top:75px">
                            <span>
                                <b>@Html.DisplayNameFor(model => model.ProductName) :</b>
                            </span>

                            <span>
                                @Html.DisplayFor(model => model.ProductName)
                            </span>
                            <br />
                            <br />
                            <span>
                                <b> @Html.DisplayNameFor(model => model.OrderCode)   : </b>
                            </span>

                            <span>
                                @Html.DisplayFor(model => model.OrderCode)
                            </span>
                            <br />
                            <br />
                            <span>
                                <b>  @Html.DisplayNameFor(model => model.ProductCode) : </b>
                            </span>

                            <span>
                                @Html.DisplayFor(model => model.ProductCode)
                            </span>
                            <br />
                            <br />
                        </div>
                    </div>
                    <hr />
                    <br />

                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>  @Html.DisplayNameFor(model => model.BuyerFullName) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.BuyerFullName)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>   @Html.DisplayNameFor(model => model.EmailId) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.EmailId)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b> @Html.DisplayNameFor(model => model.MobileNo) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.MobileNo)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b> @Html.DisplayNameFor(model => model.Address) : </b>
                        </span>

                        <span class="form-group col-sm-4" style="font-size:18px;">
                            @Html.DisplayFor(model => model.Address)
                        </span>
                    </div>
                    <hr />
                    <br />


                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>  @Html.DisplayNameFor(model => model.Total) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.Total)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>  @Html.DisplayNameFor(model => model.Status) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.Status)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-5">
                            <b>@Html.DisplayNameFor(model => model.ProductQuantity) : </b>
                        </span>
                        <span class="form-group col-sm-5">
                            @Html.DisplayFor(model => model.ProductQuantity)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>   @Html.DisplayNameFor(model => model.Date) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.Date)
                        </span>
                    </div>
                    @*<span>
            @Html.DisplayNameFor(model => model.ShippingCharges)
        </span>

        <span>
            @Html.DisplayFor(model => model.ShippingCharges)
        </span>*@

                    @*<span>
            @Html.DisplayNameFor(model => model.CategoryCode)
        </span>

        <span>
            @Html.DisplayFor(model => model.CategoryCode)
        </span>*@


                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>    @Html.DisplayNameFor(model => model.MRP) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.MRP)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>   @Html.DisplayNameFor(model => model.ProductWeight) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.ProductWeight)
                        </span>
                    </div>
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>    @Html.DisplayNameFor(model => model.PaymentMode) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.PaymentMode)
                        </span>
                    </div>
                    @if (Model.RejectionReason != null && Model.RejectionReason != "")
                    {
                        <div class="row">
                            <span class="form-group col-sm-5">
                                <b>    @Html.DisplayNameFor(model => model.RejectionReason) : </b>
                            </span>

                            <span class="form-group col-sm-5" style="color:#ff0000;font-weight:bold;">
                                @Html.DisplayFor(model => model.RejectionReason)
                            </span>
                        </div>

                        <div class="row">
                            <span class="form-group col-sm-4">
                                <b>    @Html.DisplayNameFor(model => model.RejectedByUserCode) : </b>
                            </span>

                            <span class="form-group col-sm-4">
                                @Html.DisplayFor(model => model.RejectedByUserCode)
                            </span>
                        </div>
                    }
                    <div class="row">
                        <span class="form-group col-sm-4">
                            <b>    @Html.DisplayNameFor(model => model.TransactionId) : </b>
                        </span>

                        <span class="form-group col-sm-4">
                            @Html.DisplayFor(model => model.TransactionId)
                        </span>
                    </div>

                    @*<span>
            @Html.DisplayNameFor(model => model.InvoiceNo)
        </span>

        <span>
            @Html.DisplayFor(model => model.InvoiceNo)
        </span>*@

                </dl>

                @using (Html.BeginForm("ConfirmOrder", "Seller"))
                {
                    <hr />
                    <div style="display:none" class="row">
                        <div class="form-group row">
                            @Html.DisplayNameFor(model => model.OrderCode)
                        </div>

                        <div class="col-md-8">
                            @Html.EditorFor(model => model.OrderCode, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    if (Model.OrderStatusId == 6)
                    {
                        <div class="row">

                            <div>
                                <input type="submit" value="Confirm" class="btn btn-success" />
                            </div>
                            <button type="button" class="btn btn-primary">

                                @Html.ActionLink("Close", "SellerAllOrder", new { @class = "btn-xs" }, new { @style = "color:white;" })
                            </button>
                            @*<button style="border: 1px solid black; border-radius:0px; background: #003366;width:100px; height: 40px;margin-left:15px">
                                    <a style="color:white" href="@Url.Action("CancelOrder", new { id=Model.OrderCode})"
                                       ,data-id="14">Cancel</a>
                                </button>*@
                            @*<button type="button" class="btn btn-primary">

                                    @Html.ActionLink("Cancel", "SellerCancelOrder", new { OrderCode = Model.OrderCode }, new { @style = "color:white;" })
                                </button>*@
                        </div>

                    }

                }
            </div>

        </div>
    </div>



</body>
