<body>

    <main class="login">

        <div class="main-login">
            <div>
                <a href="@Url.Action("Index","Buyer")">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"> &times;</span>
                    </button>
                </a>
                <div class="top">

                    @*<a href="@Url.Action("Index","Buyer")"><button> Home </button></a>*@
                    <!--<button>
                        <input type="radio" name="size" id="1" value="small" checked />
