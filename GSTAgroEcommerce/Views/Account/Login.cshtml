                    <button>Sign In</button>
                    <a href="@Url.Action("Index","Buyer")"><button> Home </button></a>
                    <a href="@Url.Action("Registration", "Buyer")"> <button>Sign Up</button></a>
                </div>
            </div>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @*<form>*@

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input class="put"
                           @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                           <br />
                           @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })

                    <br>
               
                        <input class="put"
                               @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                              <br />
                               @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                
                    <a class="pass" href="@Url.Action("ForgotPasswordBuyer", "Account")">Forgot Password</a>

                    <input value="Sign In" id="btn" class="sub" type="submit">

                    <br />
                    <a class="" style="text-align:center;" href="@Url.Action("Registration", "Seller")">Seller Registration</a>


                    <div class="lines">
                        <div style="background-color: #a5a5a5;" class="line"></div>
                        <p style="color: #a5a5a5;" class="p-b">or</p>
                        <div style="background-color: #a5a5a5;" class="line"></div>
                    </div>

                    @*<button style="border: 2px solid;" id="btn" class="sub pic facebook" type="submit"><div class="logo2"></div>Sign in with Facebook</button>*@

                    <button style="border: 2px solid;" formaction="@ViewBag.response" id="btn" class="sub pic google" type="submit"><div class="logo"></div>Sign in with Google</button>


                    @*</form>*@
            <label style="color:red;">
                @if (TempData["Errormessage"] != null)
                {
                   <br/>
                    @TempData["Errormessage"]
                }
                </label>
                }
            </div>
        </div>

        <div class="banner">
            <a href="@Url.Action("Index","Buyer")">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"> &times;</span>
                </button>
            </a>

            <div class="blob"></div>
            <div class="blob"></div>
            <div class="contain">
                <h1>Welcome Back!</h1>
                <h4>We are happy to have you back, please sign back in to continue</h4>
                <div class="lines">
                    <div class="line"></div>
                    <p class="p-b">or</p>
                    <div class="line"></div>
                </div>
                <p class="pp">Dont have an account don't worry</p>
                <a href="@Url.Action("Registration", "Buyer")"><button class="main-btn">Sign Up today</button> </a>
